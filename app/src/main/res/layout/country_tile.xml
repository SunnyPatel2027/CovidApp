<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTile"
        android:layout_width="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/countryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USA"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/countryImg"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/common_full_open_on_phone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="8dp">

<!--                <TextView-->
<!--                    android:id="@+id/caseText"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="CASES:"-->
<!--                    android:textColor="@color/grey"-->
<!--                    android:textSize="18sp" />-->

                <TextView
                    android:id="@+id/caseNumberTile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CASES"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />

<!--                <TextView-->
<!--                    android:id="@+id/deathText"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="DEATHS:"-->
<!--                    android:textColor="@color/app_red"-->
<!--                    android:textSize="18sp" />-->

                <TextView
                    android:id="@+id/deathNumberTile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEATHS"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/app_red"
                    android:textSize="16sp" />

<!--                <TextView-->
<!--                    android:id="@+id/recoveredText"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="RECOVERED:"-->
<!--                    android:textColor="@color/green"-->
<!--                    android:textSize="18sp" />-->

                <TextView
                    android:id="@+id/recoveredNumberTile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECOVERED"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/green"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/activeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVE:"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_right"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>